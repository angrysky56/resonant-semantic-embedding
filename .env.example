# RSE Embedding Backend Configuration
# Copy this file to .env and customize for your setup

# Embedding Backend Selection
# Options: "python-service" or "ollama"
EMBEDDING_BACKEND=python-service

# Python FastAPI Embedding Service Configuration
PYTHON_SERVICE_URL=http://127.0.0.1:8001
PYTHON_SERVICE_TIMEOUT=30000

# Ollama Configuration
OLLAMA_URL=http://127.0.0.1:11434
# Available models: nomic-embed-text, mxbai-embed-large, all-minilm, bge-m3
# Or your custom models: gemma:2b-embedding, qwen2.5:0.5b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=30000

# RSE Algorithm Parameters
RSE_THRESHOLD=0.1
RSE_WINDOW_SIZE=3
RSE_MANIFOLD_DIM=3
RSE_USE_MANIFOLD=true

# Performance Tuning
RSE_BATCH_SIZE=10
RSE_MAX_CONCURRENT=5
